{
	"name": "mangaweb4-frontend",
	"version": "0.3.0",
	"private": true,
	"scripts": {
		"dev": "vite dev | pino-pretty ",
		"build": "vite build | pino-pretty",
		"preview": "vite preview | pino-pretty",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 static/favicon.svg",
		"generate-grpc": "protoc --ts_out=src/lib/grpc --proto_path=./schema history.proto maintenance.proto manga.proto tag.proto types.proto system.proto user.proto",
		"knip": "knip"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"@protobuf-ts/plugin": "^2.11.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.4",
		"@tailwindcss/typography": "^0.5.19",
		"@types/bootstrap": "^5.2.10",
		"@types/fs-extra": "^11.0.4",
		"@types/md5": "^2.3.6",
		"@types/node": "^25.0.5",
		"@types/path-browserify": "^1.0.3",
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"@typescript-eslint/parser": "^8.52.0",
		"@vite-pwa/assets-generator": "^1.0.2",
		"@vite-pwa/sveltekit": "^1.1.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"knip": "^5.80.2",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.16",
		"workbox-window": "^7.4.0"
	},
	"type": "module",
	"dependencies": {
		"@grpc/grpc-js": "^1.14.3",
		"@mdi/svg": "^7.4.47",
		"@protobuf-ts/grpc-transport": "^2.11.1",
		"@rwh/keystrokes": "^1.5.6",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
