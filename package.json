		"fs-extra": "^11.3.3",
		"hammerjs": "^2.0.8",
		"jose": "^6.1.3",
		"md5": "^2.3.0",
		"path-browserify": "^1.0.1",
		"pino": "^10.1.1",
		"pino-pretty": "^13.1.3",
		"svelte-easy-crop": "^5.0.0",
		"svelte-eslint-parser": "^1.4.1",
		"svelte-icon": "^2.1.1",
		"tailwindcss": "^4.1.18",
		"ts-enum-util": "^4.1.0"
	}
