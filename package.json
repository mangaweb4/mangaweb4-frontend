{
	"name": "mangaweb4-frontend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev | pino-pretty ",
		"build": "vite build | pino-pretty",
		"preview": "vite preview | pino-pretty",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 static/favicon.svg",
		"generate-grpc": "protoc --ts_out=src/lib/grpc --proto_path=./schema history.proto maintenance.proto manga.proto tag.proto types.proto",
		"knip": "knip"
	},
	"devDependencies": {
		"@playwright/test": "^1.51.1",
		"@protobuf-ts/plugin": "^2.11.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.20.7",
		"@types/bootstrap": "^5.2.10",
		"@types/fs-extra": "^11.0.4",
		"@types/md5": "^2.3.5",
		"@types/node": "^22.16.3",
		"@typescript-eslint/eslint-plugin": "^8.29.1",
		"@typescript-eslint/parser": "^8.29.1",
		"@vite-pwa/assets-generator": "^1.0.0",
		"@vite-pwa/sveltekit": "^1.0.0",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^3.5.1",
		"knip": "^5.61.3",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"sass": "1.77.6",
		"svelte": "^5.26.2",
		"svelte-check": "^4.1.6",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vite": "^6.3.4",
		"vitest": "^3.1.1",
		"workbox-window": "^7.3.0"
	},
	"type": "module",
	"dependencies": {
		"@grpc/grpc-js": "^1.13.4",
		"@protobuf-ts/grpc-transport": "^2.11.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@sveltestrap/sveltestrap": "^7.1.0",
		"bootstrap": "^5.3.5",
		"bootstrap-icons": "^1.11.3",
		"bootswatch": "^5.3.5",
		"fs-extra": "^11.3.0",
		"jose": "^6.0.11",
		"md5": "^2.3.0",
		"pino": "^9.7.0",
		"pino-pretty": "^13.0.0",
		"svelte-easy-crop": "^4.0.1",
		"svelte-eslint-parser": "^1.1.2",
		"ts-enum-util": "^4.1.0"
	}
}
